    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.7.1/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.7.1/ScrollTrigger.min.js"></script>
    <script>
        const chosenBooks = []
        var total = 0
        function chosenBook(bookName, bookPrice) {
            document.getElementById(bookName).classList.add('bg-green-500')
            document.getElementById('totalContainer').classList.remove('hidden')
            document.getElementById('imgContainer').classList.remove('md:flex')
            document.getElementById('imgContainer').classList.add('hidden')
            if (!chosenBooks.includes(bookName)) {
                total = total + parseInt(bookPrice)
                chosenBooks.push(bookName)
                const bookCard = document.createElement("div");
                bookCard.className = "bg-gray-900 py-4 px-6 rounded-3xl my-2"
                const bookTitle = document.createTextNode(bookName);
                bookCard.appendChild(bookTitle);
                document.getElementById('items').appendChild(bookCard)

                // document.getElementById('items').innerHTML = chosenBooks
                document.getElementById('total').value = '₹' + total
                document.getElementById('bookList').value = chosenBooks

            }

        }

        gsap.from('.sideBar', { x: -20, opacity: 0 })
        gsap.from('.book', { x: 20, opacity: 0, stagger: 0.1 })
        // ------------------------------------------------MENU-------------------------------------


        let showMenu = gsap.timeline().pause()
        showMenu.to('.navbar', { y: -30, opacity: 0, duration: 0.2 })

        // window.onscroll = function () {
        //     showMenu.reverse()
        // }

        setInterval(function () {
            showMenu.play()
        }, 5000)



        function newMenu() {
            document.getElementById('menu').classList.toggle('hidden')
            document.getElementById('close').classList.toggle('hidden')
            document.getElementById('drawer').classList.toggle('hidden')
        }

        // -----------------------------------------------------CATEGORY-----------------------------------------

        function category(n) {
            let friends = document.querySelectorAll('.friends')
            let aware = document.querySelectorAll('.awareness')
            let relationship = document.querySelectorAll('.relationship')
            let decision = document.querySelectorAll('.decision')

            switch (n) {
                case 1:
                    aware.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    relationship.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    decision.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    friends.forEach((ele) => {
                        ele.classList.remove('hidden')
                    })

                    break;


                case 2:
                    aware.forEach((ele) => {
                        ele.classList.remove('hidden')
                    })

                    friends.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    relationship.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    decision.forEach((ele) => {
                        ele.classList.add('hidden')
                    })


                    break;

                case 3:
                    relationship.forEach((ele) => {
                        ele.classList.remove('hidden')
                    })

                    friends.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    decision.forEach((ele) => {
                        ele.classList.add('hidden')
                    })
                    aware.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    break;

                case 4:
                    decision.forEach((ele) => {
                        ele.classList.remove('hidden')
                    })

                    friends.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    relationship.forEach((ele) => {
                        ele.classList.add('hidden')
                    })
                    aware.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    break;
            }
        }


    </script>



