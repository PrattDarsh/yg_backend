        function newMenu() {
            document.getElementById('menu').classList.toggle('hidden')
            document.getElementById('close').classList.toggle('hidden')
            document.getElementById('drawer').classList.toggle('hidden')
        }

        // -----------------------------------------------------CATEGORY-----------------------------------------

        function category(n) {
            let friends = document.querySelectorAll('.friends')
            let aware = document.querySelectorAll('.awareness')
            let relationship = document.querySelectorAll('.relationship')
            let decision = document.querySelectorAll('.decision')

            switch (n) {
                case 1:
                    aware.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    relationship.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    decision.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    friends.forEach((ele) => {
                        ele.classList.remove('hidden')
                    })

                    break;


                case 2:
                    aware.forEach((ele) => {
                        ele.classList.remove('hidden')
                    })

                    friends.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    relationship.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    decision.forEach((ele) => {
                        ele.classList.add('hidden')
                    })


                    break;

                case 3:
                    relationship.forEach((ele) => {
                        ele.classList.remove('hidden')
                    })

                    friends.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    decision.forEach((ele) => {
                        ele.classList.add('hidden')
                    })
                    aware.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    break;

                case 4:
                    decision.forEach((ele) => {
                        ele.classList.remove('hidden')
                    })

                    friends.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    relationship.forEach((ele) => {
                        ele.classList.add('hidden')
                    })
                    aware.forEach((ele) => {
                        ele.classList.add('hidden')
                    })

                    break;
            }
        }


    </script>



