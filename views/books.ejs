    <script>
        const chosenBooks = []
        var total = 0
        function chosenBook(bookName, bookPrice) {
            document.getElementById(bookName).classList.remove('bg-gray-900')
            document.getElementById(bookName).classList.add('border-2', 'border-green-500')
            document.getElementById('totalContainer').classList.remove('hidden')
            document.getElementById('imgContainer').classList.remove('md:flex')
            document.getElementById('imgContainer').classList.add('hidden')
            if (!chosenBooks.includes(bookName)) {
                total = total + parseInt(bookPrice)
                chosenBooks.push(bookName)
                const bookCard = document.createElement("div");
                bookCard.className = "bg-gray-900 py-4 px-6 rounded-3xl my-2"
                const bookTitle = document.createTextNode(bookName);
                bookCard.appendChild(bookTitle);
                document.getElementById('items').appendChild(bookCard)

                // document.getElementById('items').innerHTML = chosenBooks
                document.getElementById('total').value = '₹' + total
                document.getElementById('bookList').value = chosenBooks

            }

        }

        gsap.from('.sideBar', { x: -20, opacity: 0 })
        gsap.from('.book', { x: 20, opacity: 0, stagger: 0.1 })
        // ------------------------------------------------MENU-------------------------------------


